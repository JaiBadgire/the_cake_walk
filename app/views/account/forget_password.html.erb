<h2>Forget Password?</h2>

<%= form_for(:user) do |f| %>

<div class="field">
    <font color="red">*</font><%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<p>(fields with <font color="red">*</font> are compulsory)</p>